                <h2>Option Slection</h2>
                @using (Html.BeginForm("Volunteer", "Volunteer", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div>
                       
                        <div>Image @Html.RadioButton("option", "image")</div>
                        <div>Video @Html.RadioButton("option", "video")</div>

                    </div>
                    <br />
                    <input type="file" name="file" />
                    <br />
                    <input type="submit" value="Submit" />
                }


            </div>

           
