        <div class="row">
            <div class="container" style="height: 600px; overflow: auto;">
                @if (Model.Count > 0)
                {
                    <div class="row-fluid">
                        <div class="span2">
                            <div class="item">
                                @foreach (volunteer file in Model)
                                {
                                    <div style=" margin:10px; float:left;">
                                        <div class="gallery">
                                            <a title="Photo" href="@Url.Content("~/media")@file.FileName">
                                                <div class="zoom">
                                                    <img src="@Url.Content("~/media")@file.FileName" class="imgBox" />
                                                </div>
                                            </a>
                                        </div>

                                        <div style="padding: 250px;">
                                            @file.FileName
                                        </div>
                                        <div>
                                            @Html.ActionLink("Download", "DownloadFile", new { fileName = file.FileName }, new { @class = "btn btn-success btn-sm" })
                                            @Html.ActionLink("DELETE", "DeleteFile", new { fileName = file.FileName }, new { @class = "btn btn-danger btn-sm" })
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
